#include <stdio.h>
#include <string.h>

int main() {
    char str[300], words[50][50];
    int count[50] = {0}, i = 0, j, k;
    printf("Enter a sentence: ");
    gets(str);

    char *token = strtok(str, " ");
    while (token != NULL) {
        for (j = 0; j < i; j++) {
            if (strcmp(words[j], token) == 0) {
                count[j]++;
                break;
            }
        }
        if (j == i) {
            strcpy(words[i], token);
            count[i++] = 1;
        }
        token = strtok(NULL, " ");
    }

    printf("Word Frequency:\n");
    for (k = 0; k < i; k++)
        printf("%s = %d\n", words[k], count[k]);
    return 0;
}
