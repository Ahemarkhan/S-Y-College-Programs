#include <stdio.h>
#include <string.h>

void reverseWord(char *start, char *end) {
    char temp;
    while (start < end) {
        temp = *start;
        *start++ = *end;
        *end-- = temp;
    }
}

int main() {
    char str[200];
    printf("Enter a sentence: ");
    gets(str);

    char *word_start = str;
    for (char *p = str; ; p++) {
        if (*p == ' ' || *p == '\0') {
            reverseWord(word_start, p - 1);
            word_start = p + 1;
        }
        if (*p == '\0') break;
    }
    printf("Sentence with words reversed: %s\n", str);
    return 0;
}
