#include <stdio.h>
#include <string.h>

int main() {
    char text[200], word[50];
    int count = 0;
    printf("Enter a sentence: ");
    gets(text);
    printf("Enter word to find: ");
    gets(word);

    char *ptr = strstr(text, word);
    while (ptr != NULL) {
        count++;
        ptr = strstr(ptr + 1, word);
    }
    printf("'%s' occurs %d times.\n", word, count);
    return 0;
}
