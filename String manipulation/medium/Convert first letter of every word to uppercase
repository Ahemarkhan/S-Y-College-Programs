#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[200];
    printf("Enter a sentence: ");
    gets(str);
    int capitalize = 1;
    for (int i = 0; str[i] != '\0'; i++) {
        if (capitalize && isalpha(str[i])) {
            str[i] = toupper(str[i]);
            capitalize = 0;
        }
        if (str[i] == ' ')
            capitalize = 1;
    }
    printf("Capitalized string: %s\n", str);
    return 0;
}
