#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[200];
    int upper=0, lower=0, digit=0, space=0;
    printf("Enter a string: ");
    gets(str);
    for (int i = 0; str[i]; i++) {
        if (isupper(str[i])) upper++;
        else if (islower(str[i])) lower++;
        else if (isdigit(str[i])) digit++;
        else if (isspace(str[i])) space++;
    }
    printf("Upper: %d, Lower: %d, Digits: %d, Spaces: %d\n", upper, lower, digit, space);
    return 0;
}
