#include <stdio.h>
#include <string.h>

int main() {
    char exp[100];
    printf("Enter an expression: ");
    gets(exp);
    int balance = 0;
    for (int i = 0; exp[i]; i++) {
        if (exp[i] == '(') balance++;
        else if (exp[i] == ')') balance--;
        if (balance < 0) break;
    }
    if (balance == 0)
        printf("Balanced parentheses\n");
    else
        printf("Unbalanced parentheses\n");
    return 0;
}
