#include <stdio.h>
#include <string.h>

int main() {
    char text[100];
    int key;
    printf("Enter text: ");
    gets(text);
    printf("Enter key: ");
    scanf("%d", &key);

    for (int i = 0; text[i]; i++)
        if (isalpha(text[i]))
            text[i] = (text[i] - 'a' + key) % 26 + 'a';

    printf("Encrypted: %s\n", text);
    return 0;
}
