#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char text[200];
    printf("Enter sentence: ");
    gets(text);

    int cap = 1;
    for (int i = 0; text[i]; i++) {
        if (isspace(text[i]))
            cap = 1;
        else if (cap && isalpha(text[i])) {
            text[i] = toupper(text[i]);
            cap = 0;
        } else
            text[i] = tolower(text[i]);
    }
    printf("Title Case: %s\n", text);
    return 0;
}
