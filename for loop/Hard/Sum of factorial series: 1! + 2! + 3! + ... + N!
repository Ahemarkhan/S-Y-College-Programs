#include <stdio.h>
int main() {
    int n;
    long long fact, sum = 0;
    printf("Enter n: ");
    scanf("%d", &n);
    for(int i = 1; i <= n; i++) {
        fact = 1;
        for(int j = 1; j <= i; j++)
            fact *= j;
        sum += fact;
    }
    printf("Sum = %lld", sum);
    return 0;
}
