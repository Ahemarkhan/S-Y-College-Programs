#include <stdio.h>
int main() {
    float salary, tax;
    printf("Enter salary: ");
    scanf("%f", &salary);
    if(salary <= 250000)
        tax = 0;
    else if(salary <= 500000)
        tax = 0.05 * (salary - 250000);
    else if(salary <= 1000000)
        tax = 0.05 * 250000 + 0.2 * (salary - 500000);
    else
        tax = 0.05 * 250000 + 0.2 * 500000 + 0.3 * (salary - 1000000);
    printf("Tax = %.2f", tax);
    return 0;
}
