#include <stdio.h>
int main() {
    int a,b,choice;
    printf("Enter two numbers: ");
    scanf("%d%d", &a,&b);
    printf("1.Add  2.Subtract  3.Multiply  4.Divide\n");
    scanf("%d", &choice);

    if(choice == 1)
        printf("Sum = %d", a+b);
    else if(choice == 2)
        printf("Difference = %d", a-b);
    else if(choice == 3)
        printf("Product = %d", a*b);
    else if(choice == 4) {
        if(b != 0)
            printf("Division = %.2f", (float)a/b);
        else
            printf("Division by zero not possible");
    }
    else
        printf("Invalid choice");
    return 0;
}
