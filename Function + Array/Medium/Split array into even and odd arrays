#include <stdio.h>
void splitEvenOdd(int a[], int n, int even[], int *eCount, int odd[], int *oCount){
    *eCount = *oCount = 0;
    for(int i=0;i<n;i++){
        if(a[i]%2==0) even[(*eCount)++] = a[i];
        else odd[(*oCount)++] = a[i];
    }
}
int main(){
    int a[6]={1,2,3,4,5,6}, even[6], odd[6], eCount, oCount;
    splitEvenOdd(a,6,even,&eCount,odd,&oCount);
    printf("Even: ");
    for(int i=0;i<eCount;i++) printf("%d ",even[i]);
    printf("\nOdd: ");
    for(int i=0;i<oCount;i++) printf("%d ",odd[i]);
    return 0;
}
