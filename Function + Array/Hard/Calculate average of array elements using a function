#include <stdio.h>
float avg(int a[], int n) {
    int i, sum = 0;
    for(i=0;i<n;i++) sum += a[i];
    return (float)sum/n;
}
int main() {
    int n, a[100];
    printf("Enter size: ");
    scanf("%d",&n);
    for(int i=0;i<n;i++) scanf("%d",&a[i]);
    printf("Average = %.2f", avg(a,n));
    return 0;
}
