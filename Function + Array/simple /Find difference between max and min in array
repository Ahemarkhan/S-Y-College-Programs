#include <stdio.h>
int diffMaxMin(int a[], int n){
    int max=a[0], min=a[0];
    for(int i=1;i<n;i++){
        if(a[i]>max) max=a[i];
        if(a[i]<min) min=a[i];
    }
    return max - min;
}
int main(){
    int a[5]={10,20,5,25,15};
    printf("Difference = %d", diffMaxMin(a,5));
    return 0;
}
