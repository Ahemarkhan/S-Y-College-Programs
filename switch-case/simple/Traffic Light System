#include <stdio.h>
int main() {
    int light;
    printf("Enter light color (1=Red, 2=Yellow, 3=Green): ");
    scanf("%d", &light);
    switch(light) {
        case 1: printf("STOP!\n"); break;
        case 2: printf("GET READY!\n"); break;
        case 3: printf("GO!\n"); break;
        default: printf("Invalid input.\n");
    }
    return 0;
}
