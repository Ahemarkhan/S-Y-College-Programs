#include <stdio.h>
int main() {
    int hour;
    printf("Enter hour (0â€“23): ");
    scanf("%d", &hour);
    switch(hour / 6) {
        case 0: printf("Good Night\n"); break;
        case 1: printf("Good Morning\n"); break;
        case 2: printf("Good Afternoon\n"); break;
        case 3: printf("Good Evening\n"); break;
        default: printf("Invalid hour\n");
    }
    return 0;
}
