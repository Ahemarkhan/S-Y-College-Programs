
#include <stdio.h>
int main() {
    int state;
    printf("Enter bulb state (1=ON, 0=OFF): ");
    scanf("%d", &state);
    switch(state) {
        case 1: printf("The bulb is ON.\n"); break;
        case 0: printf("The bulb is OFF.\n"); break;
        default: printf("Invalid input.\n");
    }
    return 0;
}
