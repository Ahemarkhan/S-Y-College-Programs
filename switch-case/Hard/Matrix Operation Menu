#include <stdio.h>
int main() {
    int a[2][2], b[2][2], c[2][2], i,j,ch;
    printf("Enter Matrix A:\n"); for(i=0;i<2;i++) for(j=0;j<2;j++) scanf("%d",&a[i][j]);
    printf("Enter Matrix B:\n"); for(i=0;i<2;i++) for(j=0;j<2;j++) scanf("%d",&b[i][j]);
    printf("1.Add 2.Subtract 3.Multiply: "); scanf("%d",&ch);
    switch(ch) {
        case 1: for(i=0;i<2;i++) for(j=0;j<2;j++) c[i][j]=a[i][j]+b[i][j]; break;
        case 2: for(i=0;i<2;i++) for(j=0;j<2;j++) c[i][j]=a[i][j]-b[i][j]; break;
        case 3: for(i=0;i<2;i++) for(j=0;j<2;j++) { c[i][j]=a[i][0]*b[0][j]+a[i][1]*b[1][j]; } break;
        default: printf("Invalid\n"); return 0;
    }
    printf("Result:\n");
    for(i=0;i<2;i++) { for(j=0;j<2;j++) printf("%d ",c[i][j]); printf("\n"); }
    return 0;
}
