#include <stdio.h>
int main() {
    FILE *f; char data[100]; int ch;
    do {
        printf("\n1.Write 2.Read 3.Exit: ");
        scanf("%d",&ch);
        switch(ch) {
            case 1:
                f=fopen("data.txt","w");
                printf("Enter text: "); getchar();
                fgets(data,100,stdin);
                fputs(data,f); fclose(f); break;
            case 2:
                f=fopen("data.txt","r");
                while(fgets(data,100,f)) printf("%s",data);
                fclose(f); break;
            case 3: break;
            default: printf("Invalid\n");
        }
    } while(ch!=3);
    return 0;
}
