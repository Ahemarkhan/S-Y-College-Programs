#include <stdio.h>
int main() {
    int n,ch;
    printf("Enter number: "); scanf("%d",&n);
    printf("1.Binary 2.Octal 3.Hexadecimal: "); scanf("%d",&ch);
    switch(ch) {
        case 1: printf("Binary: "); for(int i=31;i>=0;i--) if(n>>i & 1) printf("1"); else printf("0"); break;
        case 2: printf("Octal: %o\n", n); break;
        case 3: printf("Hexadecimal: %X\n", n); break;
        default: printf("Invalid");
    }
    return 0;
}
