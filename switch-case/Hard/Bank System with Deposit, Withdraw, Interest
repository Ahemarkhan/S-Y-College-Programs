#include <stdio.h>
int main() {
    float balance=10000, amt; int ch;
    do {
        printf("\n1.Deposit 2.Withdraw 3.Interest 4.Exit: ");
        scanf("%d",&ch);
        switch(ch) {
            case 1: printf("Amount: "); scanf("%f",&amt); balance+=amt; break;
            case 2: printf("Withdraw: "); scanf("%f",&amt); 
                    if(amt<=balance) balance-=amt; else printf("Insufficient!\n");
                    break;
            case 3: balance += balance*0.05; printf("Interest added.\n"); break;
            case 4: break;
            default: printf("Invalid\n");
        }
        printf("Balance: %.2f\n",balance);
    } while(ch!=4);
    return 0;
}
