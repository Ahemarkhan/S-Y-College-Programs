#include <stdio.h>
int main() {
    int month;
    printf("Enter month number: ");
    scanf("%d",&month);
    switch(month) {
        case 2: printf("February: 28 or 29 days\n"); break;
        case 4: case 6: case 9: case 11: printf("30 days\n"); break;
        default: if(month>=1 && month<=12) printf("31 days\n"); 
                 else printf("Invalid month\n");
    }
    return 0;
}
