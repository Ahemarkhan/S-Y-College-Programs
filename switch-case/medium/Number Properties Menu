#include <stdio.h>
int main() {
    int num, choice;
    printf("Enter number: ");
    scanf("%d", &num);
    printf("1.Even/Odd 2.Positive/Negative 3.Prime Check: ");
    scanf("%d", &choice);
    switch(choice) {
        case 1: printf(num%2==0 ? "Even\n":"Odd\n"); break;
        case 2: printf(num>0?"Positive\n":(num<0?"Negative\n":"Zero\n")); break;
        case 3: {
            int i, flag=0;
            for(i=2;i<=num/2;i++) if(num%i==0) flag=1;
            printf(flag==0 && num>1?"Prime\n":"Not Prime\n");
            break;
        }
        default: printf("Invalid choice");
    }
    return 0;
}
