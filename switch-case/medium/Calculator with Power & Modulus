#include <stdio.h>
#include <math.h>
int main() {
    int choice;
    double a, b;
    printf("1.Add 2.Sub 3.Mul 4.Div 5.Power 6.Mod\nEnter choice: ");
    scanf("%d", &choice);
    printf("Enter two numbers: ");
    scanf("%lf %lf", &a, &b);
    switch(choice) {
        case 1: printf("%.2lf\n", a+b); break;
        case 2: printf("%.2lf\n", a-b); break;
        case 3: printf("%.2lf\n", a*b); break;
        case 4: printf("%.2lf\n", a/b); break;
        case 5: printf("%.2lf\n", pow(a,b)); break;
        case 6: printf("%d\n", (int)a % (int)b); break;
        default: printf("Invalid");
    }
    return 0;
}
