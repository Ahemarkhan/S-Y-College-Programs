#include <stdio.h>
int main() {
    int n;
    printf("Enter size of matrix: ");
    scanf("%d", &n);
    int a[10][10], sum = 0;
    printf("Enter elements:\n");
    for(int i=0;i<n;i++)
        for(int j=0;j<n;j++)
            scanf("%d", &a[i][j]);

    for(int i=0;i<n;i++)
        for(int j=0;j<n;j++)
            if(i==0 || j==0 || i==n-1 || j==n-1)
                sum += a[i][j];

    printf("Sum of boundary elements = %d", sum);
    return 0;
}
