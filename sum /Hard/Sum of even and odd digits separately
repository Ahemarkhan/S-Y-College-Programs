#include <stdio.h>
int main() {
    int n, even = 0, odd = 0, d;
    printf("Enter number: ");
    scanf("%d", &n);
    while(n > 0) {
        d = n % 10;
        if(d % 2 == 0) even += d;
        else odd += d;
        n /= 10;
    }
    printf("Even sum = %d, Odd sum = %d", even, odd);
    return 0;
}
