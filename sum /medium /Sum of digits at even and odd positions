#include <stdio.h>
int main() {
    int n, pos = 1, evenSum = 0, oddSum = 0;
    printf("Enter number: ");
    scanf("%d", &n);
    while(n > 0) {
        if(pos % 2 == 0)
            evenSum += n % 10;
        else
            oddSum += n % 10;
        n /= 10;
        pos++;
    }
    printf("Even position sum = %d, Odd position sum = %d", evenSum, oddSum);
    return 0;
}
