#include <stdio.h>

struct Complex {
    float real, imag;
};

struct Complex add(struct Complex a, struct Complex b) {
    struct Complex res;
    res.real = a.real + b.real;
    res.imag = a.imag + b.imag;
    return res;
}

int main() {
    struct Complex n1 = {2.5, 3.5}, n2 = {1.5, 4.5};
    struct Complex sum = add(n1, n2);
    printf("Sum = %.1f + %.1fi\n", sum.real, sum.imag);
    return 0;
}
