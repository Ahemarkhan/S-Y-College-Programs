#include <stdio.h>

struct Emp {
    int id;
    float salary;
};

int main() {
    struct Emp e[3] = {{1,5000},{2,3000},{3,7000}};
    int min=0;
    for(int i=1;i<3;i++)
        if(e[i].salary < e[min].salary)
            min=i;
    printf("Lowest Salary Employee ID: %d (%.2f)\n", e[min].id, e[min].salary);
    return 0;
}
