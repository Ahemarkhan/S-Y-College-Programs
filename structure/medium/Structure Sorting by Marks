#include <stdio.h>

struct Student {
    char name[20];
    float marks;
};

int main() {
    struct Student s[3] = {{"Amit",80},{"Ravi",90},{"Sita",70}};
    struct Student temp;

    for(int i=0;i<3;i++)
        for(int j=i+1;j<3;j++)
            if(s[i].marks < s[j].marks) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }

    for(int i=0;i<3;i++)
        printf("%s %.2f\n", s[i].name, s[i].marks);
    return 0;
}
