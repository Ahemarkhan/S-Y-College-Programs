#include <stdio.h>

struct Employee {
    int id;
    char name[20];
    float salary, bonus;
};

int main() {
    struct Employee e[3];
    for(int i=0;i<3;i++) {
        printf("Enter id, name, salary: ");
        scanf("%d %s %f", &e[i].id, e[i].name, &e[i].salary);
        e[i].bonus = (e[i].salary >= 5000) ? e[i].salary*0.1 : e[i].salary*0.05;
    }

    for(int i=0;i<3;i++)
        printf("%d %s %.2f (Bonus: %.2f)\n", e[i].id, e[i].name, e[i].salary, e[i].bonus);
    return 0;
}
